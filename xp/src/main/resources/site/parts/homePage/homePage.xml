<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Home Page</display-name>
    <form>
        <input name="pagesSite" type="ContentSelector">
            <label>Pages site</label>
            <help-text>Please select the site where the pages are located.</help-text>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowPath>${site}</allowPath>
                <treeMode>true</treeMode>
                <hideToggleIcon>true</hideToggleIcon>
            </config>
        </input>

        <input name="postCreatePage" type="ContentSelector">
            <label>Post create</label>
            <help-text>Please select the folder where the posts are going to be created.</help-text>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowContentType>base:folder</allowContentType>
                <allowPath>${site}</allowPath>
                <treeMode>true</treeMode>
                <hideToggleIcon>true</hideToggleIcon>
            </config>
        </input>
    </form>
</part>