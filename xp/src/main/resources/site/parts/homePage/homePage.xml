<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Home Page</display-name>
    <form>

        <input name="userCreate" type="ContentSelector">
            <label>User create</label>
            <help-text>Please select the folder where the users are going to be created.</help-text>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowContentType>base:folder</allowContentType>
                <allowPath>${site}</allowPath>
                <treeMode>true</treeMode>
                <hideToggleIcon>true</hideToggleIcon>
            </config>
        </input>
        <input name="userDelete" type="ContentSelector">
            <label>User delete</label>
            <help-text>Please select the folder where the users are going to be deleted.</help-text>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowContentType>base:folder</allowContentType>
                <allowPath>${site}</allowPath>
                <treeMode>true</treeMode>
                <hideToggleIcon>true</hideToggleIcon>
            </config>
        </input>
    </form>
</part>