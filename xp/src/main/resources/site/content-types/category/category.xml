<content-type>
    <display-name>Category</display-name>
    <display-name-label>Post Category</display-name-label>
    <description>Create category</description>
    <super-type>base:structured</super-type>
    <display-name-expression>${title}</display-name-expression>
    <form>
        <input name="title" type="TextLine">
            <occurrences minimum="1" maximum="1" />
            <label>Title</label>
        </input>
        <input name="description" type="TextArea">
            <occurrences minimum="1" maximum="1" />
            <label>Descriotion</label>
        </input>
        <input name="photo" type="ImageSelector">
            <occurrences minimum="0" maximum="1" />
            <label>Image</label>
        </input>
    </form>
</content-type>